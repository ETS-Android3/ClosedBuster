<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<iflink>
    <language name="jp">
        <device
            name="ClosedBuster v1.1"
            dataitem="unit_id,bd_address,co2,temperature,humidity,motion,barometer"
            category="CO2濃度,気温,湿度,人感,気圧"
            icon="closedbuster.png"
            key="devicename"
            value="jp.iflink.closed_buster:ClosedBuster:4">
            <if>
                <condition
                    name="CO2濃度が閾値を上回ったら"
                    icon="notification.png"
                    interface="IAI"
                    key="dataname"
                    value="co2">
                    <property
                        name="判断"
                        datatype="string"
                        key="compare"
                        type="hidden"
                        value="ge" />
                    <property
                        name="閾値"
                        datatype="int"
                        default="1000"
                        key="value"
                        max="4000"
                        min="400"
                        type="text" />
                </condition>
                <condition
                    name="CO2濃度が閾値を下回ったら"
                    icon="notification.png"
                    interface="IAI"
                    key="dataname"
                    value="co2">
                    <property
                        name="判断"
                        datatype="string"
                        key="compare"
                        type="hidden"
                        value="le" />
                    <property
                        name="閾値"
                        datatype="int"
                        default="1000"
                        key="value"
                        max="4000"
                        min="400"
                        type="text" />
                </condition>
                <condition
                    name="CO2濃度が設定範囲になったら"
                    icon="notification.png"
                    interface="IAI"
                    key="dataname"
                    value="co2">
                    <property
                        name="判断"
                        datatype="string"
                        key="compare"
                        type="hidden"
                        value="between" />
                    <property
                        name="設定範囲"
                        datatype="int"
                        default="400,4000"
                        key="value"
                        max="4000"
                        min="400"
                        type="slider" />
                </condition>
                <condition
                    name="気温が設定範囲になったら"
                    icon="notification.png"
                    interface="IAI"
                    key="dataname"
                    value="temperature">
                    <property
                        name="判断"
                        datatype="string"
                        key="compare"
                        type="hidden"
                        value="between" />
                    <property
                        name="設定範囲"
                        datatype="int"
                        default="-10,50"
                        key="value"
                        max="50"
                        min="-10"
                        type="slider" />
                </condition>
                <condition
                    name="湿度が設定範囲になったら"
                    icon="notification.png"
                    interface="IAI"
                    key="dataname"
                    value="humidity">
                    <property
                        name="判断"
                        datatype="string"
                        key="compare"
                        type="hidden"
                        value="between" />
                    <property
                        name="設定範囲"
                        datatype="int"
                        default="0,95"
                        key="value"
                        max="95"
                        min="0"
                        type="slider" />
                </condition>
                <condition
                    name="人の動きを検知したら"
                    icon="notification.png"
                    interface="IAI"
                    key="dataname"
                    value="motion">
                    <property
                        name="アクション"
                        datatype="int"
                        type="hidden"
                        key="value"
                        value="1" />
                </condition>
                <condition
                    name="一定時間人の動きが無かったら"
                    icon="notification.png"
                    interface="IAI"
                    key="dataname"
                    value="motion">
                    <property
                        name="アクション"
                        datatype="int"
                        type="hidden"
                        key="action"
                        value="0" />
                </condition>
                <condition
                    name="気圧が設定範囲になったら"
                    icon="notification.png"
                    interface="IAI"
                    key="dataname"
                    value="barometer">
                    <property
                        name="判断"
                        datatype="string"
                        key="compare"
                        type="hidden"
                        value="between" />
                    <property
                        name="設定範囲"
                        datatype="int"
                        default="800,1100"
                        key="value"
                        max="1100"
                        min="800"
                        type="slider" />
                </condition>
            </if>
        </device>
    </language>
    <language name="en">
        <device
            name="Closed Buster v1.1"
            dataitem="unit_id,bd_address,co2,temperature,humidity,barometer,motion"
            category="CO2,Temperature,Humidity,Motion,Barometer"
            icon="closedbuster.png"
            key="devicename"
            value="jp.iflink.closed_buster:ClosedBuster:4">
            <if>
                <condition
                    name="When the co2 concentration exceeds the threshold value"
                    icon="notification.png"
                    interface="IAI"
                    key="dataname"
                    value="co2">
                    <property
                        name="Judgment"
                        datatype="string"
                        key="compare"
                        type="hidden"
                        value="ge" />
                    <property
                        name="Threshold"
                        datatype="int"
                        default="1000"
                        key="value"
                        max="4000"
                        min="400"
                        type="text" />
                </condition>
                <condition
                    name="When the co2 concentration falls below the threshold value"
                    icon="notification.png"
                    interface="IAI"
                    key="dataname"
                    value="co2">
                    <property
                        name="Judgment"
                        datatype="string"
                        key="compare"
                        type="hidden"
                        value="le" />
                    <property
                        name="Threshold"
                        datatype="int"
                        default="1000"
                        key="value"
                        max="4000"
                        min="400"
                        type="text" />
                </condition>
                <condition
                    name="When the co2 concentration is in the configuration range"
                    icon="notification.png"
                    interface="IAI"
                    key="dataname"
                    value="co2">
                    <property
                        name="Judgment"
                        datatype="string"
                        key="compare"
                        type="hidden"
                        value="between" />
                    <property
                        name="Range"
                        datatype="int"
                        default="400,4000"
                        key="value"
                        max="4000"
                        min="400"
                        type="slider" />
                </condition>
                <condition
                    name="When the air temperature is in the configuration range"
                    icon="notification.png"
                    interface="IAI"
                    key="dataname"
                    value="temperature">
                    <property
                        name="Judgment"
                        datatype="string"
                        key="compare"
                        type="hidden"
                        value="between" />
                    <property
                        name="Range"
                        datatype="int"
                        default="-10,50"
                        key="value"
                        max="50"
                        min="-10"
                        type="slider" />
                </condition>
                <condition
                    name="When the air humidity is in the configuration range"
                    icon="notification.png"
                    interface="IAI"
                    key="dataname"
                    value="humidity">
                    <property
                        name="Judgment"
                        datatype="string"
                        key="compare"
                        type="hidden"
                        value="between" />
                    <property
                        name="Range"
                        datatype="int"
                        default="0,95"
                        key="value"
                        max="95"
                        min="0"
                        type="slider" />
                </condition>
                <condition
                    name="When a human motion is detected"
                    icon="notification.png"
                    interface="IAI"
                    key="dataname"
                    value="motion">
                    <property
                        name="ACTION"
                        datatype="int"
                        type="hidden"
                        key="action"
                        value="1" />
                </condition>
                <condition
                    name="When no human motion for a period of time"
                    icon="notification.png"
                    interface="IAI"
                    key="dataname"
                    value="motion">
                    <property
                        name="ACTION"
                        datatype="int"
                        type="action"
                        key="value"
                        value="0" />
                </condition>
                <condition
                    name="When the air pressure is in the configuration range"
                    icon="notification.png"
                    interface="IAI"
                    key="dataname"
                    value="barometer">
                    <property
                        name="Judgment"
                        datatype="string"
                        key="compare"
                        type="hidden"
                        value="between" />
                    <property
                        name="設定範囲"
                        datatype="int"
                        default="800,1100"
                        key="value"
                        max="1100"
                        min="800"
                        type="slider" />
                </condition>
            </if>
        </device>
    </language>

    <schema name="closedbuster">
        <property name="devicename" type="string" />
        <property name="deviceserial" type="string" />
        <property name="timestamp"  type="timestamp" />
        <!-- デバイス固有設定 Start -->
        <property name="unit_id" type="string" />
        <property name="bd_address" type="string" />
        <property name="co2" type="int" />
        <property name="temperature" type="int" />
        <property name="humidity" type="int" />
        <property name="motion" type="int" />
        <property name="barometer" type="int" />
        <!-- デバイス固有設定 End -->
    </schema>
</iflink>
